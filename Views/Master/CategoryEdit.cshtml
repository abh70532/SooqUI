
@model WrokFlowWeb.ViewModel.CategoryMaster.CategoryMasterViewModel

@{
    ViewBag.Title = "Edit Category";
}

<h1>@ViewBag.Title</h1>


<div class="row">
    <div class="col-md-4">
        <form method="post" asp-controller="Master" asp-action="CategoryEditUpdate">
            @Html.HiddenFor(m => m.CategoryMasterId)
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Category"></label>
                <input asp-for="Category" class="form-control" />
                <span asp-validation-for="Category" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <button id="btnSubmit" type="submit" class="btn btn-primary">Update Category</button>
            <a asp-controller="SupplierRequest" asp-action="CategoryList" class="btn btn-primary" style="width:auto">Cancel</a>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}