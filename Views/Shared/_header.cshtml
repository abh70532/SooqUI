@using Microsoft.AspNetCore.Identity
@using WrokFlowWeb.Areas.Identity.Data

@inject SignInManager<WrokFlowWebUser> SignInManager
@inject UserManager<WrokFlowWebUser> UserManager

<ul class="navbar-nav  headerNav">
    @if (SignInManager.IsSignedIn(User))
    {
        
        <li class="nav-item">
            <span>
                @UserManager.GetUserName(User)!
                <span class="profile_icon"></span>
                <i class="fas fa-caret-down"></i>
            </span>
            <ul>
                <li class="border-bottom">
                    <a id="manage" class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Update Profile</a>
                </li>
                <li class="nav-item">
                    <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                        <button id="logout" type="submit" class="nav-link btn btn-link text-dark">Logout</button>
                    </form>
                </li>
            </ul>
        </li>
        
    }

</ul>
