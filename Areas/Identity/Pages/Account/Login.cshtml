@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="container-fluid w-100 h-100 mx-0 my-0 px-0 py-0 d-flex flex-column align-items-center justify-content-center login_reg_container">
    <div class="logo">
        <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">WrokFlowWeb</a>
    </div>
    <div class="log_reg_inner bg-white">
        <div class="form_Header">@ViewData["Title"]</div>
        <div class="row">
            <div class="col-md-12">
                <section>
                    <form id="account" method="post">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Input.Email"></label>
                            <input asp-for="Input.Email" class="form-control" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.Password"></label>
                            <input asp-for="Input.Password" class="form-control" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <div class="checkbox">
                                <label asp-for="Input.RememberMe">
                                    <input asp-for="Input.RememberMe" />
                                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                                </label>
                            </div>
                        </div>
                        <div class="form-group">
                            @*<p>
                                <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                            </p>*@
                         </div>
                        <div class="d-flex justify-content-end formBtns">
                            <div class="form-group mr-1">
                                <a class="btn btn-secondary" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" role="button">Register</a>
                            </div>

                            <div class="form-group ml-1">
                                <button type="submit" class="btn btn-primary">Log in</button>
                            </div>
                        </div>
                    </form>
                </section>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
